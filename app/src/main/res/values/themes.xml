<resources>
    <!-- Base application theme. -->
    <style name="Theme.Btnv" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/colorPrimaryDark</item>
        <item name="colorPrimaryDark">?android:attr/colorPressedHighlight</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Btnv.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Btnv.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Btnv.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>